<?xml version="1.0" encoding="utf-8"?>
<PLUGIN name="unraid-security" author="SirSmirksALot" version="2025.06.25" min="6.9.0">
  <CATEGORY>Security</CATEGORY>

  <CHANGES>
    Initial release of Unraid Security Plugin
  </CHANGES>

  <FILE Name="/usr/local/emhttp/plugins/unraid-security/unraid-security.page" Run="upgrade">
    <URL>https://raw.githubusercontent.com/SirSmirksALot/unraid-security/main/source/unraid-security.page</URL>
  </FILE>

  <FILE Name="/usr/local/emhttp/plugins/unraid-security/check_security.sh" Run="upgrade">
    <URL>https://raw.githubusercontent.com/SirSmirksALot/unraid-security/main/source/check_security.sh</URL>
  </FILE>

  <INSTALL>
    #!/bin/bash
    echo "Installing unraid-security"
    chmod 644 /usr/local/emhttp/plugins/unraid-security/unraid-security.page
    chmod +x /usr/local/emhttp/plugins/unraid-security/check_security.sh
  </INSTALL>

  <REMOVE>
    #!/bin/bash
    echo "Removing unraid-security"
    rm -rf /usr/local/emhttp/plugins/unraid-security
  </REMOVE>

  <DISPLAY>
    <FILE>unraid-security.page</FILE>
  </DISPLAY>
</PLUGIN>
